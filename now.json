{
  "version": 2,
  "scope": "black-haze",
  "builds": [
    { "src": "package.json", "use": "@vercel/next" },
    {
      "src": "server/handlers/post.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/api/contact",
      "methods": ["POST"],
      "dest": "server/handlers/post.js"
    }
  ],
  "env": {
    "NODEMAILER": "@nodemailer"
  },
  "build": {
    "env": {
      "NODEMAILER": "@nodemailer"
    }
  }
}
